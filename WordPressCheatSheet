//Loads CSS and JavaScript Files (functions.php)

function load_scripts(){
    wp_enqueue_style('title', get_template_directory_uri() . '/uri');
    wp_enqueue_script('javascriptTitle', get_template_directory_uri() . '/url', array(), 'Version Number', true);
}

add_action ('wp_enqueue_scripts', 'load_scripts');

//Homepage Sidebars (functions.php)

add_action(
    'widgets_init', 
    'homepage_sidebars'
);
function homepage_sidebars(){
    register_sidebar(
        array(
            'name' => 'Sidebar Name',
            'id' => 'sidebarName',
            'description' => 'A description of what the sidebar does',
            'before_widget' => ' ',
            'after_widget' => ' ',
            'before_title' => '<h2 class="widget-title">',
            'after_title' => '</h2>'
        )  
    );
}

//Sidebar Content (pages and templates)
<?php
						if(is_active_sidebar('sidebarName')){
						dynamic_sidebar('sidebarName');
						}
?>

//Navigation Menus (functions.php)
    register_nav_menus(
        array(
            'primary' => 'The Main Menu',
            'social' => 'Social Menu'
        )
    );
    
//Navigation Menus (pages and templates)
<?php
     wp_nav_menu(
            array(
                'theme_location' => 'social',
                'container' => '',
                'menu_class' => 'icons'
    )
);
?>

//Include template parts (re-useable code) (pages and templates)
<?php
		while ( have_posts() ) : the_post();
		get_template_part( 'template-parts/header-nav', 'headerNav' );
		endwhile; // End of the loop.
?>

//Support for featured image (functions.php)
add_theme_support( 'post-thumbnails' );

//Support for Custom Logo (functions.php)
add_theme_support('custom-logo');

//Custom logo (pages and templates)
has_custom_logo() ? the_custom_logo() : ''; 

//Support for WooCommerce (functions.php)
function millar_add_woocommerce_support() {
    add_theme_support( 'woocommerce', array(
    'thumbnail_image_width' => 150,
    'single_image_width'    => 300,
            'product_grid'          => array(
                'default_rows'    => 3,
                'min_rows'        => 2,
                'max_rows'        => 8,
                'default_columns' => 4,
                'min_columns'     => 2,
                'max_columns'     => 5,
            ),
    ) );
    }
    add_action( 'after_setup_theme', 'millar_add_woocommerce_support' );

//Support for zoom and magnification in WooCommerce (functions.php)
add_action  ( 
            'after_setup_theme', 
            'millar_zoom_setup'
            ); 

function millar_zoom_setup() {
    add_theme_support( 'wc-product-gallery-zoom' );
}

//Disables default styles in WooCommerce (functions.php)
if (class_exists('Woocommerce')){
    add_filter( 
        'woocommerce_enqueue_styles', 
        '__return_empty_array' 
    );
}

//Adds Lightbox, Zoom and Slider Support for WooCommerce (functions.php)
add_action( 
            'after_setup_theme', 
            'millar_lightbox_zoom_slider_setup'
); 
function millar_lightbox_zoom_slider_setup() {
    add_theme_support( 'wc-product-gallery-zoom' );
    add_theme_support( 'wc-product-gallery-lightbox' );
    add_theme_support( 'wc-product-gallery-slider' );
}


//Remove WooCommerce Short Description (functions.php)
function remove_the_short_description() {
    remove_meta_box( 'postexcerpt', 'product', 'normal');
   } 
   add_action('add_meta_boxes', 'remove_the_short_description', 999);


//Remove WordCommerce description, reviews and additional_information tabs from product page (functions.php)
add_filter( 'woocommerce_product_tabs', 'woo_remove_product_tabs', 98 );

function woo_remove_product_tabs( $tabs ) {

    unset( $tabs['description'] );      	// Remove the description tab
    unset( $tabs['reviews'] ); 			// Remove the reviews tab
    unset( $tabs['additional_information'] );  	// Remove the additional information tab

    return $tabs;

}

//Remove the description box from admin panel (functions.php)
function remove_product_editor() {
    remove_post_type_support( 'product', 'editor' );
  }
  add_action( 'init', 'remove_product_editor' );

//Unhook WooCommerce Wrappers (functions.php)
remove_action( 'woocommerce_before_main_content', 'woocommerce_output_content_wrapper', 10);
remove_action( 'woocommerce_after_main_content', 'woocommerce_output_content_wrapper_end', 10);
?>

//Add custom fields to WordPress theme files (pages and templates)
the_field('field_name')

//WordPress hooks (pages and templates)
wp_head(); //Head files
wp_footer(); //Footer Files
the_title(); // Page Title
the_content(); //Page Content


